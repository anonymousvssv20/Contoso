@page
@model ContosoUniversity.Pages.Enrollments.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Student)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Enrollment)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.LastName),
                    @Html.DisplayFor(modelItem => item.Student.FirstMidName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EnrollmentID" class="btn btn-primary">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.EnrollmentID" class="btn btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.EnrollmentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-page="./GradeStatistics" class="btn btn-primary">View Grade Statistics</a>
</p>