@page
@model ContosoUniversity.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";
}

<h2>Create New Student</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Student.FirstMidName"></label>
        <input asp-for="Student.FirstMidName" class="form-control" required />
        <span asp-validation-for="Student.FirstMidName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.LastName"></label>
        <input asp-for="Student.LastName" class="form-control" required />
        <span asp-validation-for="Student.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.EnrollmentDate"></label>
        <input asp-for="Student.EnrollmentDate" class="form-control" type="date" required />
        <span asp-validation-for="Student.EnrollmentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Info"></label>
        <textarea asp-for="Student.Info" class="form-control"></textarea>
        <span asp-validation-for="Student.Info" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Student.CourseID" class="control-label"></label>
        <select asp-for="Student.CourseID" class="form-control" asp-items="@(ViewData["CourseID"] as IEnumerable<SelectListItem>)">
            <option value="">-- Select a Course --</option>
        </select>
        <span asp-validation-for="Student.CourseID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-page="Index" class="btn btn-primary">Back to List</a>
