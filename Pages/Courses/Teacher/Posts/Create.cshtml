@page
@model ContosoUniversity.Pages.Courses.Teacher.Posts.CreateModel

@{
    ViewData["Title"] = "Posts";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />

<!-- Display UserID (debugging purposes) -->


@if (User.IsInRole("Instructor"))
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Post.Title" class="control-label"></label>
                    <input asp-for="Post.Title" class="form-control" />
                    <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Post.Content" class="control-label"></label>
                    <input asp-for="Post.Content" class="form-control" />
                    <span asp-validation-for="Post.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post.CourseID" class="control-label"></label>
                    <select asp-for="Post.CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Post.UserID" class="control-label"></label>
                    <select asp-for="Post.UserID" class="form-control" asp-items="ViewBag.InstructorID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <p>You do not have permission to create posts. Please contact an administrator.</p>
}

<div>
    <a asp-page="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
