@page
@model ContosoUniversity.Pages.Courses.Teacher.Comments.EditModel

@{
    ViewData["Title"] = "Edit Comment";
}

<h1 class="mb-4">Edit Comment</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Comment.CommentID" />

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Comment.CommentText" class="control-label"></label>
                <textarea asp-for="Comment.CommentText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Comment.CommentText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment.PostID" class="control-label"></label>
                <select asp-for="Comment.PostID" class="form-control" asp-items="ViewBag.PostID" disabled></select>
                <input type="hidden" asp-for="Comment.PostID" /> @* Ensures PostID is submitted but not editable *@
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
