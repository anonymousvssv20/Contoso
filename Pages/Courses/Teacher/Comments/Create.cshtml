@page
@model ContosoUniversity.Pages.Courses.Teacher.Comments.CreateModel

@{
    ViewData["Title"] = "Create Comment";
}

<h2>Create Comment</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Comment.CommentText" class="control-label"></label>
        <textarea asp-for="Comment.CommentText" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Comment.CommentText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment.PostID" class="control-label"></label>
        <select asp-for="Comment.PostID" class="form-control" asp-items="ViewBag.PostID">
            <option value="">-- Select a Post --</option>
        </select>
        <span asp-validation-for="Comment.PostID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
    <a asp-page="./Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
